    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "akr generate",
            "cargo": {
                "args": [
                    "build",
                    "--bin=akr",
                    "--package=kr"
                ],
                "filter": {
                    "name": "akr",
                    "kind": "bin"
                }
            },
            "args": ["generate", "--name", "testkey"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "akr pair",
            "cargo": {
                "args": [
                    "build",
                    "--bin=akr",
                    "--package=akr"
                ],
                "filter": {
                    "name": "akr",
                    "kind": "bin"
                }
            },
            "args": ["pair"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "akr setup",
            "cargo": {
                "args": [
                    "build",
                    "--bin=akr",
                    "--package=kr"
                ],
                "filter": {
                    "name": "akr",
                    "kind": "bin"
                }
            },
            "args": ["setup"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "akr start",
            "cargo": {
                "args": [
                    "build",
                    "--bin=akr",
                    "--package=kr"
                ],
                "filter": {
                    "name": "akr",
                    "kind": "bin"
                }
            },
            "args": ["start"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'kr'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=akr",
                    "--package=kr"
                ],
                "filter": {
                    "name": "akr",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'ssh_agent'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=ssh_agent"
                ],
                "filter": {
                    "name": "ssh_agent",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}